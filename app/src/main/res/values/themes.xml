<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Badel" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/main_app_color</item>
        <item name="colorPrimaryVariant">@color/main_app_color</item>
        <item name="colorOnPrimary">@color/main_app_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_app_color</item>
        <item name="colorSecondaryVariant">@color/secondary_app_color</item>
        <item name="colorOnSecondary">@color/secondary_app_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">
            @style/MyCustomActivityAnimation
        </item>

    </style>

    <style name="mainButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/bg_main_btn</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textAppearance">@style/montserrat_regular_14</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint"> @null</item>
    </style>

    <style name="Theme.Badel" parent="Base.Theme.Badel" />

    <style name="MyCustomActivityAnimation" parent="@android:style/Animation.Activity">

        <item name="android:activityOpenEnterAnimation">
            @anim/slide_up_activity
        </item>

        <item name="android:activityOpenExitAnimation">@anim/empty_anim</item>

        <item name="android:activityCloseEnterAnimation">
            @anim/empty_anim
        </item>

        <item name="android:activityCloseExitAnimation">
            @anim/slide_down_activity
        </item>

    </style>


    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@drawable/text_input_layout_stroke_color</item>
        <item name="hintTextColor">@drawable/text_hint_color</item>
        <item name="hintTextAppearance">@style/montserrat_regular_13</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/light_red</item>
        <item name="boxStrokeErrorColor">@color/light_red</item>
        <item name="errorIconTint">@color/light_red</item>
        <item name="expandedHintEnabled">false</item>
        <item name="placeholderTextAppearance">@style/montserrat_light_14</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_main_bottom_sheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TransparentAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_transparent</item>
    </style>

    <style name="SlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_uupp</item>
        <item name="android:windowExitAnimation">@anim/slide_outout</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


