<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_txtReceiverChatItem_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_msg_receiver_txt"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5dp"
        android:maxWidth="260dp"
        android:paddingStart="14dp"
        android:paddingTop="12dp"
        android:paddingEnd="14dp"
        android:paddingBottom="12dp"
        android:textAppearance="@style/montserrat_regular_13"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا النص من مولد النص العربى، حيث يمكنك أن تولد مثل هذا النص" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="09:02 AM"
        android:id="@+id/tv_txtReceiverChatItem_time"
        android:textColor="@color/auro_metal_saurus"
        android:textAppearance="@style/montserrat_regular_11"
        app:layout_constraintTop_toBottomOf="@id/tv_txtReceiverChatItem_message"
        app:layout_constraintStart_toStartOf="@id/tv_txtReceiverChatItem_message"
        />

</androidx.constraintlayout.widget.ConstraintLayout>