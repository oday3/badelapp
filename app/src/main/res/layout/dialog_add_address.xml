<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_adAddressDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/do_you_want_save_address"
        android:textAlignment="center"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:textAppearance="@style/montserrat_medium_15"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/montserrat_medium_12"
        android:textColor="@color/black"
        tools:text="kasnfloansfn"
        app:layout_constraintTop_toBottomOf="@id/tv_adAddressDialog_title"
        android:id="@+id/tv_adAddressDialog_description"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_adAddressDialog_address"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ad_search_edt"
        android:hint="@string/enter_address_name"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="45dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:layout_marginHorizontal="32dp"
        android:textAppearance="@style/montserrat_light_14"
        android:textColor="@color/rich_black"
        android:textColorHint="@color/auro_metal_saurus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_adAddressDialog_description" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_adAddressDialog_address">

        <TextView
            android:id="@+id/tv_adAddressDialog_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lineSpacingExtra="5dp"
            android:text="@string/save"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_main_color_10r"
            android:textAppearance="@style/montserrat_medium_12"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_adAddressDialog_title" />

        <TextView
            android:id="@+id/tv_adAddressDialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lineSpacingExtra="5dp"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:gravity="center"
            android:background="@drawable/bg_unselected_filter_time"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/montserrat_medium_12"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_adAddressDialog_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_adAddressDialog_description"
            app:layout_constraintTop_toTopOf="@+id/tv_adAddressDialog_description" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>