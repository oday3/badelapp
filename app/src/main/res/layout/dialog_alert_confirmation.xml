<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="45dp"
        android:src="@drawable/ic_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/tv_title"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:textAppearance="@style/montserrat_semi_bold_15"
        />



    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="0dp"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="7dp"
        android:text="@string/yes"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toStartOf="@id/tv_no"
        android:gravity="center"
        style="@style/mainButtonStyle"
        android:background="@drawable/bg_main_color_10r"
        android:textAppearance="@style/montserrat_medium_14"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="0dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="16dp"
        style="@style/mainButtonStyle"
        android:background="@drawable/bg_unselected_filter_time"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/no"
        android:textAppearance="@style/montserrat_medium_14"
        android:textColor="@color/rich_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_yes"
        app:layout_constraintTop_toTopOf="@id/tv_yes" />

</androidx.constraintlayout.widget.ConstraintLayout>