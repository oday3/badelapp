<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_categoryHHH"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare_16"
        android:layout_marginStart="14dp"
        tools:src="@drawable/cate_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_categoryName"
        android:layout_width="0dp"
        android:layout_marginStart="14dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        tools:text="إلكترونيات"
        android:textAppearance="@style/montserrat_medium_14"
        android:textColor="@color/rich_black"
        app:layout_constraintBottom_toBottomOf="@id/img_categoryHHH"
        app:layout_constraintStart_toEndOf="@id/img_categoryHHH"
        app:layout_constraintTop_toTopOf="@id/img_categoryHHH" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/arrow_cat"
        android:layout_marginEnd="14dp"
        />


    <View
        android:id="@+id/view_dash"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_dahs"
        app:layout_constraintTop_toBottomOf="@id/img_categoryHHH" />

</androidx.constraintlayout.widget.ConstraintLayout>