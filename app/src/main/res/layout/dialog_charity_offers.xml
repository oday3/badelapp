<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_charityOffersDialog_charityOffers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:textAppearance="@style/montserrat_semi_bold_15"
        android:textColor="@color/rich_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_charityOffersDialog_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        tools:text="على طلب أيفون 13 بروماكس بحالة ممتازة جدا"
        android:textAppearance="@style/montserrat_regular_12"
        android:textColor="@color/auro_metal_saurus"
        app:layout_constraintEnd_toEndOf="@+id/tv_charityOffersDialog_charityOffers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_charityOffersDialog_charityOffers" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_listOfSwapOrders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginTop="32dp"
        android:paddingTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_charityOffersDialog_desc"
        app:layout_constraintHeight_max="583dp"
        app:layout_constraintStart_toStartOf="@+id/tv_charityOffersDialog_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_charityOffersDialog_desc"
        tools:listitem="@layout/list_item_charity_offer" />


</androidx.constraintlayout.widget.ConstraintLayout>