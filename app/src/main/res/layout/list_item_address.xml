<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_iconHHH"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare_circle"
        tools:src="@drawable/cate_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_locationName"
        android:layout_width="0dp"
        android:layout_marginStart="14dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        tools:text="إلكترونيات"
        android:textAppearance="@style/montserrat_regular_12"
        android:textColor="@color/rich_black"
        app:layout_constraintBottom_toBottomOf="@id/img_iconHHH"
        app:layout_constraintStart_toEndOf="@id/img_iconHHH"
        app:layout_constraintTop_toTopOf="@id/img_iconHHH" />


</androidx.constraintlayout.widget.ConstraintLayout>