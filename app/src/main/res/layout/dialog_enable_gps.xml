<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_enableGpsDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/please_enable_gps"
        android:textAlignment="center"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:textAppearance="@style/montserrat_medium_15"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enableGpsDialog_title">

        <TextView
            android:id="@+id/tv_enableGpsDialog_enable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lineSpacingExtra="5dp"
            android:text="@string/enable"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_main_color_10r"
            android:textAppearance="@style/montserrat_medium_12"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_enableGpsDialog_title" />

        <TextView
            android:id="@+id/tv_enableGpsDialog_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lineSpacingExtra="5dp"
            android:layout_weight="1"
            android:text="@string/no"
            android:gravity="center"
            android:background="@drawable/bg_unselected_filter_time"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/montserrat_medium_12"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_enableGpsDialog_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_enableGpsDialog_description"
            app:layout_constraintTop_toTopOf="@+id/tv_enableGpsDialog_description" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>