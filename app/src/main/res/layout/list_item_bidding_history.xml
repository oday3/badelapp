<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:shapeAppearanceOverlay="@style/RoundedSquare_5"
        android:layout_marginStart="14dp"
        android:src="@drawable/hummer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_bidderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingExtra="5dp"
        tools:text="Marvel Systems"
        android:textAppearance="@style/montserrat_medium_13"
        android:textColor="@color/rich_black"
        app:layout_constraintStart_toEndOf="@id/img_icon"
        app:layout_constraintTop_toTopOf="@id/img_icon" />

    <TextView
        android:id="@+id/tv_biddingValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="سعر المزايدة: 4000,00"
        android:textAppearance="@style/montserrat_regular_11"
        android:textColor="@color/auro_metal_saurus"
        app:layout_constraintTop_toBottomOf="@id/tv_bidderName"
        app:layout_constraintStart_toStartOf="@id/tv_bidderName"
        />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        tools:text="منذ 3 ساعات"
        android:textAppearance="@style/montserrat_regular_12"
        android:textColor="@color/quick_silver"
        app:layout_constraintBottom_toBottomOf="@id/tv_bidderName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_bidderName"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toEndOf="@id/tv_time"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_chat_unselected"
        />

