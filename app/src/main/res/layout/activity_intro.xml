<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splash"
    tools:context=".appFeatures.appCommon.ui.IntroActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/splash_logo"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:text="@string/skip"
        android:id="@+id/tv_skip"
        android:textAppearance="@style/montserrat_regular_14"
        android:textColor="@color/secondary_app_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        android:id="@+id/linear_authActions"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            style="@style/mainButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:text="@string/login"
            android:background="@drawable/bg_secondary_color_16r"
            app:layout_constraintTop_toBottomOf="@id/cons_swapProduct"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            style="@style/mainButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:textColor="@color/secondary_app_color"
            android:text="@string/new_account"
            android:background="@drawable/bg_second_outline_btn"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/cons_swapProduct"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>